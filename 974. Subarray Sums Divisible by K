class Solution {
public:
    int subarraysDivByK(vector<int>& nums, int k) {
        unordered_map<int, int> modCount;
        modCount[0] = 1;
        int prefixSum = 0, count = 0;

        for (int num : nums) {
            prefixSum += num;
            int mod = ((prefixSum % k) + k) % k;
            count += modCount[mod];
            modCount[mod]++;
        }

        return count;
    }
};
